{
    "manifest_version": 3,
    "name": "Forge-Toolkit",
    "version": "1.0",
    "description": "A suite of modular tools for web customization.",
  "permissions": ["scripting", "activeTab", "storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/forge-16.png",
      "48": "icons/forge-48.png",
      "128": "icons/forge-128.png"
    }
  },
  "icons": {
    "16": "icons/forge-16.png",
    "48": "icons/forge-48.png",
    "128": "icons/forge-128.png"
  }
}
